@model QuanLyKhoThucPham.Models.PhieuNhapModel

@{
    ViewData["Title"] = "Xóa Phiếu Nhập";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Xóa Phiếu Nhập</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Ngày Nhập:</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.NgayNhap)</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Nhà Cung Cấp:</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.NhaCungCap.TenNhaCungCap)</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Kho Nhập:</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.KhoHang.TenKho)</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Nhân Viên Nhập:</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.NhanVien.HoTen)</div>
            </div>

            <h5 class="mt-4">Chi Tiết Phiếu Nhập</h5>
            <table class="table table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Tên Sản Phẩm</th>
                        <th>Số Lượng</th>
                        <th>Đơn Giá</th>
                        <th>Tổng Tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.DSChiTietPhieuNhap != null)
                    {
                        @foreach (var item in Model.DSChiTietPhieuNhap)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.SanPham.TenSP)</td>
                                <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                                <td>@Html.DisplayFor(modelItem => item.DonGia)</td>
                                <td>@Html.DisplayFor(modelItem => item.TongTIen)</td>
                            </tr>
                        }

                    }
                    
                </tbody>
                <tfoot>
                    <tr class="table-warning">
                        <th colspan="3" class="text-end">Tổng Tiền:</th>
                        <th>@Html.DisplayFor(model => model.TongTien)</th>
                    </tr>
                </tfoot>
            </table>

            <div class="text-center mt-4">
                <form asp-action="Delete" asp-route-maPN="@Model.MaPhieuNhap" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger px-4">Xóa</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Thoát</a>
            </div>
        </div>
    </div>
</div>
