@model QuanLyKhoThucPham.Models.TaiKhoan

@{
    ViewData["Title"] = "Xóa tài khoản";
}

<h1>@ViewData["Title"]</h1>

<h3>Bạn có chắc chắn muốn xóa tài khoản này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaiKhoanNguoiDung)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaiKhoanNguoiDung)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>  