@model QuanLyKhoThucPham.Models.KhachHangModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa Thông Tin</h1>


<div>
    <h4>Quanlykhachhang</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TenKH)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenKH)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
   
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SDT)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SDT)
        </dd>
    </dl>


    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaKH" />

        <div style="margin-top: 20px; display: flex; gap: 10px; align-items: center;">
            <button type="submit" style="background-color: red; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;">
                Xác nhận xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a> 

        </div>
    </form>
