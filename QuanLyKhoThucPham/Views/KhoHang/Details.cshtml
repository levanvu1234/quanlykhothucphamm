@model QuanLyKhoThucPham.Models.KhoHangModel

@{
    ViewData["Title"] = "Details";
}

<h1>Chi tiết</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <a>Tên kho</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenKho)
        </dd>
        <dt class="col-sm-2">
            <a>Loại kho</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KhoLoaiSP)
        </dd>
        <dt class="col-sm-2">
            <a>Mô tả</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.mota)
        </dd>

        <dt class="col-sm-2">
            <a>Số lượng tổng</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.soluongtong)
        </dd>
        <dt class="col-sm-2">
            <a>Số lượng trống</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.soluongtrong)
        </dd>

    </dl>
</div>
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model?.MaKho" class="btn btn-primary">Chỉnh sửa</a> 
    <a asp-action="Index" class="btn btn-warning">Quay lại</a>
</div>
